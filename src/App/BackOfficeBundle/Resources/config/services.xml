<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="app_back.help.handler.class">App\BackOfficeBundle\Handler\HelpHandler</parameter>
        <parameter key="app_back.help.menu.entity.class">App\BackOfficeBundle\Entity\HelpMenu</parameter>
        <parameter key="app_back.help.page.entity.class">App\BackOfficeBundle\Entity\HelpPage</parameter>

        <parameter key="app_back.help.form.class">App\BackOfficeBundle\Form\HelpType</parameter>
        <parameter key="app_back.help.form.alias">app_help_type</parameter>
    </parameters>

    <services>

        <service id="app_back.help.handler" class="%app_back.help.handler.class%">
            <argument type="service" id="service_container" />
            <argument>%app_back.help.menu.entity.class%</argument>
            <argument>%app_back.help.page.entity.class%</argument>
        </service>

        <service id="app_back.help.form" class="%app_back.help.form.class%">
            <tag name="form.type" alias="%app_back.help.form.alias%" />
            <argument type="service" id="service_container" />
        </service>

    </services>

</container>
