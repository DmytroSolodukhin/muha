{% extends "AppBackOfficeBundle::pagelayout.html.twig" %}

{% block page_title %}{% if not is_copy %}Update{% else %}Copy{% endif %} front page{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>{% if not is_copy %}Update{% else %}Copy{% endif %} front page</h2>
                {% if not is_copy %}
                    <p>Front page id: <strong>{{ pageNode.id }}</strong></p>
                {% endif %}
                <p>Front page name: <strong>{{ pageNode.name }}</strong></p>
                <div>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="hero-actions">
                        <a class="btn btn-danger btn-sm js-delete-hero"
                           href="{{ path('app_back_office_front_page_delete_hero_image', {'id': pageNode.id}) }}"
                           title="Remove hero image" role="button"><i
                                    class="glyphicon glyphicon-remove"></i></a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% include('AppBackOfficeBundle:BackOffice:modal_for_exist_image.html.twig') %}
{% endblock %}
{% block footer_js %}
    {{ parent() }}
    <script src="{{ asset('bundles/appbackoffice/js/front_page_actions.js') }}"></script>
    <script src="{{ asset('bundles/appbackoffice/js/existing_image_actions.js') }}"></script>
{% endblock %}