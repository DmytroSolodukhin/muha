{% extends "AppBackOfficeBundle::pagelayout.html.twig" %}

{% block page_title %}Products Priority{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% if priority_products|length > 0 %}
                <form action="{{ path('app_back_priority_products_change',{'id':products.0.categoryId}) }}" method="post">
                    <table class="table table-hover big-icons">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Weight</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for grp in priority_products %}

                            <tr>
                                <td>{{grp.getProduct.id}}</td>

                                <td>{{ grp.getProduct.name }}</td>
                                <td><input type="text" pattern="[0-9]{1,3}" name="priority[{{ grp.getProduct.id }}]" value="{{ grp.priority }}"></td>
                                <td>
                                    <p class="btn-group" role="group">
                                        <a class="btn btn-danger btn-sm" href="{{ path('app_back_priority_product_delete', {'id': grp.getProduct.id}) }}" title="Disable product priority" role="button"><i class="glyphicon glyphicon-ban-circle"></i></a>
                                    </p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <input type="submit" value="Change">
                </form>
                    {% else %}
                        <p>There are no visible products</p>
                {% endif %}
            </div>
        </div>
    </div>
{% if products|length > 0 %}
    <br><br>
    <div class="conteiner">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <form action="{{ path('app_back_office_up_sale_add_product',{'id':products.0.categoryId}) }}" method="post">
                    <select id="groups" name="product_id">
                        {% for products_set in products %}
                            {% set break = false %}
                            {% for prior in priority_products if not break %}
                                {%  if products_set.id == prior.getProduct.id %}
                                    {% set break = true %}
                                {% endif %}
                            {% endfor %}
                            {% if not break %}
                                <option value="{{ products_set.id }}">{{ products_set.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                    <input type="submit" value="Add">
                </form>
            </div>
        </div>
    </div>
{% else %}
    <p>no products to add</p>
{% endif %}
{% endblock %}