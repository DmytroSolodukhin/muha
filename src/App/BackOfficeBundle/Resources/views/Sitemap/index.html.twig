{% extends "AppBackOfficeBundle::pagelayout.html.twig" %}

{% block page_title %}Sitemap{% endblock %}
{% block content %}
    <div class="jumbotron">
        <div class="container">
            <h1>Sitemap</h1>

            <p>Here you will find sitemap files</p>
        </div>
    </div>
    <div class="container">


        <div class="row">
            <div class="col-md-12">
                <h3>Sitemap files</h3>
                <table class="table table-hover big-icons">
                    <a href="{{ path('app_back_office_sitemap_update') }}">Upload new sitemap files</a>
                    <thead>
                    <tr>
                        <th>File Title</th>
                        <th>Modified</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for file in files %}
                        <tr>
                            <td>{{ file.name }}</td>
                            <td>{{ file.updated }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}