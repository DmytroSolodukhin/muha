{% if option is not null %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <label for="title">Title</label>
        <input type="hidden" name="path" class="form-control" hidden id="form-submit-path"
               value="{{ path('app_back_office_product_options_edit', {'id': option.id}) }}"/>
        <input type="text" name="name" class="form-control" id="title"
               placeholder="Title"
               value="{{ option.name }}"/>
    </div>
    <div class="modal-body">
        {#% for name, value in option.values %}
            <input type="text" name="values[]" class="form-control" id="{{ value }}"
                   placeholder="{{ value }}"
                   value="{{ value }}"/>

        {% endfor %}
        <table class="table">
            <thead>
            <tr>
                <td width="250"></td>
                <td width="200"></td>
            </tr>
            </thead>
            <tbody id="product-variant-container">
            <tr>
                <td>
                    <input type="text" name="newField" class="form-control input-sm"
                           placeholder="Value" id="new-field-name">
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a class="btn btn-success js-add-new-option-value" href="#" title="Add value" role="button"><i
                                    class="glyphicon glyphicon-plus"></i></a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>#}
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
{% endif %}