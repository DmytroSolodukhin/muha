{% extends "AppBackOfficeBundle::pagelayout.html.twig" %}

{% block page_title %}{{ restaurant.title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>{{ 'Extended delivery / takeaway'|trans({}, 'dolly') }}</h1>

                <div class="row">
                    {% if errors is iterable %}
                        {% for error in errors %}
                            <div class="alert alert-warning alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                {{ error }}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="list-group">
                    <form action="{{ path('app_back_office_restaurant_performance', {'id': restaurant.id}) }}"
                          method="post">
                        <label for="timeTakeaway" class="control-label">
                            {{ 'Extended takeaway'|trans({}, 'dolly') }}:
                        </label>

                        <div class="input-group col-md-4">

                            <input type="text" id="timeTakeaway" name="timeTakeaway" class="form-control"
                                   value="{% if restaurant %}{{ restaurant.timeTakeaway }}{% endif %}"/>
                            <label class="input-group-addon" for="timeTakeaway">
                                {{ 'minutes'|trans({}, 'dolly') }}
                            </label>
                        </div>
                        <label for="timeDelivery" class="control-label">
                            {{ 'Extended delivery'|trans({}, 'dolly') }}:
                        </label>

                        <div class="input-group col-md-4">

                            <input type="text" id="timeDelivery" name="timeDelivery" class="form-control"
                                   value="{% if restaurant %}{{ restaurant.timeDelivery }}{% endif %}"/>
                            <label class="input-group-addon" for="timeDelivery">
                                {{ 'minutes'|trans({}, 'dolly') }}
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="guarantyVoided"
                                        {% if restaurant and restaurant.guarantyVoided ==1 %}
                                            checked
                                        {% endif %}
                                        >
                                {{ 'Lock delivery guarantee %title%'|trans({"%title%":"Dolly’s Tidsløfte"}, 'dolly') }}
                            </label>
                        </div>
                        <button type="submit" class="btn-default btn">{{ 'Save'|trans({}, 'dolly') }}</button>
                    </form>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-md-3 col-xl-2">
                        <a class="btn btn-link" href="{{ path('app_back_office_restaurant_index') }}">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
