<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_api.response_builder.service.class">App\ApiBundle\Service\ResponseBuilder</parameter>
        <parameter key="app_api.product_response_builder.service.class">App\ApiBundle\Service\ProductResponseBuilder</parameter>
        <parameter key="app_api.cart_response_builder.service.class">App\ApiBundle\Service\CartResponseBuilder</parameter>
        <parameter key="app_api.customer_response_builder.service.class">App\ApiBundle\Service\CustomerResponseBuilder</parameter>
        <parameter key="app_api.osproduct_response_builder.service.class">App\ApiBundle\Service\OsProductResponseBuilder</parameter>
        <parameter key="app_api.business_response_builder.service.class">App\ApiBundle\Service\BusinessResponseBuilder</parameter>
        <parameter key="app_api.restaurant_response_builder.service.class">App\ApiBundle\Service\RestaurantResponseBuilder</parameter>
    </parameters>

    <services>

        <service id="app_api.response_builder.service" class="%app_api.response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.product_response_builder.service" class="%app_api.product_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.cart_response_builder.service" class="%app_api.cart_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.customer_response_builder.service" class="%app_api.customer_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.osproduct_response_builder.service" class="%app_api.osproduct_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.business_response_builder.service" class="%app_api.business_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="app_api.restaurant_response_builder.service" class="%app_api.restaurant_response_builder.service.class%">
            <argument type="service" id="service_container" />
        </service>

    </services>


</container>
