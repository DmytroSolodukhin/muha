<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.twig.extension.currency.class">App\DollyBundle\Twig\CurrencyExtension</parameter>
        <parameter key="app_dolly.contact.form.class">App\DollyBundle\Form\ContactRequestType</parameter>
        <parameter key="app_dolly.contact.handler.class">App\DollyBundle\Service\ContactFormService</parameter>
    </parameters>

    <services>
        <service id="sylius.twig.extension.currency" class="%sylius.twig.extension.currency.class%" public="false">
            <tag name="twig.extension" />
        </service>

        <service id="app_dolly.contact.form.type" class="%app_dolly.contact.form.class%">
            <argument type="service" id="translator" />
        </service>
        
        <service id="app_dolly.contact.handler" class="%app_dolly.contact.handler.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="app_dolly.contact.form.type" />
            <argument type="service" id="mailer" />
            <argument type="service" id="service_container" />
        </service>
    </services>
    
</container>

